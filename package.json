{
  "name": "giftapp",
  "version": "1.0.0",
  "description": "üéÅ Web App para buscar GIFs con interfaz simple",
  "main": "src/index.html",
  "scripts": {
    "start": "live-server src/ --port=3000 --open",
    "build": "tsc src/app/*.ts --outDir src/app/dist/",
    "dev": "tsc --watch src/app/*.ts --outDir src/app/dist/",
    "clean": "rm -rf src/app/dist/",
    "deploy": "npm run build && echo 'Ready for deployment!'"
  },
