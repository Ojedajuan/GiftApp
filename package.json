    "url": "git+https://github.com/Ojedajuan/GiftApp.git"
  },
  "bugs": {
    "url": "https://github.com/Ojedajuan/GiftApp/issues"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "live-server": "^1.2.2"
  }
}